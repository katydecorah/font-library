{
  "name": "font-library",
  "version": "0.0.0",
  "description": "An open source project to tag and organize Google Fonts.",
  "scripts": {
    "pretest": "eslint .",
    "test": "jsonlint families.json -q && tape test/*.js | tap-spec",
    "prepare": "husky install"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "json-stringify-pretty-compact": "^3.0.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^11.2.6",
    "node-fetch": "^3.1.1",
    "prettier": "^2.4.1",
    "scsslint": "0.0.3",
    "tap-spec": "^5.0.0",
    "tape": "^5.0.1"
  },
  "bin": {
    "update-library": "bin/update.js"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katydecorah/font-library.git"
  },
  "author": "Katy DeCorah",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/katydecorah/font-library/issues"
  },
  "homepage": "https://github.com/katydecorah/font-library#readme",
  "lint-staged": {
    "**/*.scss": [
      "scss-lint"
    ],
    "**/*.json": [
      "prettier --print-width 600  --write"
    ],
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,yml,scss}": "prettier --write"
  }
}
