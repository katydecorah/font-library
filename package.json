{
  "name": "font-library",
  "version": "0.0.0",
  "description": "An open source project to tag and organize Google Fonts.",
  "scripts": {
    "lint": "eslint . && stylelint \"**/*.css\"",
    "pretest": "npm run lint",
    "test": "jest",
    "prepare": "husky install",
    "start": "npx @11ty/eleventy --serve",
    "update-library": "node .github/actions/update-library.mjs",
    "build": "npx eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@actions/core": "^1.10.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-wc": "^1.4.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "json-stringify-pretty-compact": "^4.0.0",
    "lint-staged": "^13.1.2",
    "node-fetch": "^3.3.0",
    "prettier": "^2.8.4",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katydecorah/font-library.git"
  },
  "author": "Katy DeCorah",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/katydecorah/font-library/issues"
  },
  "homepage": "https://github.com/katydecorah/font-library#readme",
  "prettier": {
    "overrides": [
      {
        "files": "families.json",
        "options": {
          "printWidth": 600
        }
      }
    ]
  },
  "lint-staged": {
    "families.json": [
      "prettier --write"
    ]
  }
}
